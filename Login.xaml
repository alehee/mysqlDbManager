<Window x:Class="mysqlDbManager.Login" ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mysqlDbManager"
        mc:Ignorable="d"
        Title="mysqlDbManager - Login" Height="300" Width="250">
    <Grid>
        <Label Content="Database IP / URL" HorizontalAlignment="Center" Margin="0,0,0,0"/>
        <TextBox x:Name="TB_IP" Width="200" Height="20" Margin="0,0,0,190"/>
        <Label Content="User" HorizontalAlignment="Center" Margin="0,45,0,0"/>
        <TextBox x:Name="TB_User" Width="200" Height="20" Margin="0,0,0,95"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,95,0,0"/>
        <PasswordBox x:Name="TB_Password" Width="200" Height="20" Margin="0,0,0,5"/>
        <Label Content="Database name" HorizontalAlignment="Center" Margin="0,140,0,0"/>
        <TextBox x:Name="TB_Database" Width="200" Height="20" Margin="0,85,0,0"/>

        <Label x:Name="L_Log" Width="230" Height="40" Margin="0,155,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="Log" Padding="5" Foreground="Gray"/>

        <Button x:Name="B_Connect" Content="Connect" Width="100" Height="20" Margin="0,225,0,0" Click="B_Connect_Click"/>
    </Grid>
</Window>
